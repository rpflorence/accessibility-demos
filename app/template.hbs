<!doctype html>
<title>Accessibility in Practice</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
{{{css}}}
</style>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

<header>
  <h1>Accessibility in Practice</h1>
  <nav role="nav">
    <ol id="toc">
      {{#each files}}
        <li>
          <a
            href="#{{id}}"
            title="{{textIntroduction}}"
            class="blue"
          >{{name}}</a></li>
      {{/each}}
    </ol>
  </nav>
</header>

<main role="main">
  {{#each files}}
    <article id="{{id}}">
      <h2><a class="blue header-link" href="#{{id}}">{{name}}</a></h2>
      <div class="introduction">{{{introduction}}}</div>

      <h3 class="red">Incorrect</h3>
      {{#each incorrect}}
        <pre>{{code}}</pre>
        <div class="demo">{{{code}}}</div>
        <h4>Discussion</h4>
        <div>{{{discussion}}}</div>
      {{/each}}

      <h3 class="green">Correct</h3>
      {{#each correct}}
        <pre>{{code}}</pre>
        <div class="demo">{{{code}}}</div>
        <h4>Discussion</h4>
        <div>{{{discussion}}}</div>
      {{/each}}

      {{#if resources}}
        <h3>Resources</h3>
        {{{resources}}}
      {{/if}}
    </article>
  {{/each}}
</main>


